<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eaeaea"
    android:paddingBottom="@dimen/height_padding"
    android:paddingTop="@dimen/height_padding"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/header_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="@dimen/width_padding"
        android:alpha=".3"
        android:src="@drawable/github_ic" />
    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:paddingTop="@dimen/height_padding"
        android:textColor="@color/text_normal"
        android:layout_marginLeft="@dimen/height_padding"
        android:layout_toRightOf="@+id/header_icon"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_title"
        android:layout_toRightOf="@+id/header_icon"
        android:layout_marginLeft="@dimen/height_padding"
        android:textSize="12sp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>